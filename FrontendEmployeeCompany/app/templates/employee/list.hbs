{{page-title "List of Employees"}}

<section class="employee-section">
    <div>
        <h2 class="employee-title">List of Employees</h2>
        <button class="btn btn-primary employee-title-add" {{action "onOpenNew" post on="click"}}>Add</button>
    </div>

    <table class="table table-striped table-hover">
        <thead class="bg-primary">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Surname</th>
                <th scope="col">Email</th>
                <th scope="col">Address</th>
                <th scope="col">Salary</th>
                <th scope="col">Company</th>
            </tr>
        </thead>
        <tbody>
            {{#each this.employees as |employee|}}
                <tr {{action "onEdit" employee post on="click"}}>
                    <th>{{employee.id}}</th>
                    <td>{{employee.name}}</td>
                    <td>{{employee.surname}}</td>
                    <td>{{employee.email}}</td>
                    <td>{{employee.address}}</td>
                    <td style="text-align: end;">{{format-currency employee.salary}}</td>
                    <td>{{employee.company.name}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</section>
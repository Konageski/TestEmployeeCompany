{{page-title "Report - Average Salary By Company"}}

<section class="report-section">
    <div>
        <h2 class="report-title">Report - Average Salary By Company</h2>
    </div>

    <table class="table table-striped table-hover">
        <thead class="bg-primary">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Company</th>
                <th scope="col" class="report-table-salary">Average Salary</th>
            </tr>
        </thead>
        <tbody>
            {{#each this.averageSalaryByCompanies as |company|}}
                <tr>
                    <th>{{company.id}}</th>
                    <td>{{company.name}}</td>
                    <td class="report-table-salary">{{format-currency company.averageSalary}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</section>